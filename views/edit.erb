<form action="<%= url %>" method="post" name="edit">
<div class="postzoom">
	<h2 class="title"><input type="text" name="title" value="<%= post.title %>" /></h2>
	<p class="meta"><input type="text" name="tags" value="<%= post.tags.join(" ") if post.tags.respond_to?('join') %>" /></p>
	<p class="meta"><%= post.created_at %></p>
	<div class="entry">
		<textarea name="body"><%= post.body %></textarea>
	</div>
	<div class="edit">
	  <div>
	    <label for="publish">Publish?</label>
	    <input type="checkbox" name="publish" />
	  </div>
	  <input type="submit" value="Save" />
  </div>
</div>
</form>
<div class="wmd-preview"></div>
<script type="text/javascript">
  wmd_options = {
    output: "Markdown",
    autostart: true
  }
</script>
<script type="text/javascript" src="/wmd.js"></script>